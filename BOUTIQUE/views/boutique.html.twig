{% extends 'layout.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block content %}

<div class="conteneur">
</h1>Boutique</h1>

<div class="boutique-gauche">
    <ul>
        <li><a href="{{ path('boutique') }}">Tous les produits</a></li>
        {% for categorie in categories %}
        <li><a href="{{ path('categorie', {'cat' : categorie.categorie}) }}">{{ categorie.categorie }}</a></li>
        {% endfor %}

    </ul>
</div>

<div class="boutique-droite">

    {% for pdt in produits %}

    <!-- Debut vignette produit -->
    <div class="boutique-produit">
        <h3>{{ pdt.titre }}</h3>
        <a href="{{ path('produit', {'id' : pdt.id_produit}) }}"><img src="{{ asset('/photo/'~ pdt.photo) }}" height="100"/></a>
        <p style="font-weight: bold; font-size: 20px;">{{ pdt.prix }}â‚¬</p>

        <p style="height: 40px"> {{ pdt.description |striptags| slice(0, 40) }}...</p>
        <a href="/fiche_produit/{{ pdt.id_produit }}" style="padding:5px 15px; background: red; color:white; text-align: center; border: 2px solid black; border-radius: 3px" >Voir la fiche</a>
        <!-- href="fiche_produit.php?id=id_du_produit" -->
    </div>
    <!-- Fin vignette produit -->
    {% endfor %}

</div>
<!-- Fin vignette produit -->

</div>
<!-- Fin vignette produit -->

</div>

</div>

{% endblock %}
